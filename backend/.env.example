# ── Algorand TestNet (AlgoNode — free, no API key) ──────
ALGORAND_ALGOD_ADDRESS=https://testnet-api.algonode.cloud
ALGORAND_ALGOD_TOKEN=
ALGORAND_INDEXER_URL=https://testnet-idx.algonode.cloud

# ── Platform Wallet (deploys contracts + mints NFTs) ────
PLATFORM_WALLET=your_testnet_platform_address
PLATFORM_MNEMONIC=word1 word2 word3 ... word25

# ── Pinata IPFS (free tier) ─────────────────────────────
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET=your_pinata_secret_key
PINATA_GATEWAY=https://gateway.pinata.cloud/ipfs

# ── Database ────────────────────────────────────────────
DATABASE_URL=sqlite:///./data/sticker_platform.db

# ── Golden Sticker Probability ──────────────────────────
GOLDEN_THRESHOLD=0.10
GOLDEN_TRIGGER_INTERVAL=10

# ── Listener ────────────────────────────────────────────
LISTENER_POLL_SECONDS=10

# ── Contract ────────────────────────────────────────────
TIP_PROXY_CONTRACT_PATH=contracts/tip_proxy/compiled
CONTRACT_FUND_AMOUNT=100000

# ── Application ─────────────────────────────────────────
ENVIRONMENT=development

# ── Security Modes ──────────────────────────────────────
# SIMULATION_MODE: When true, fiat on-ramp is simulated (no real Transak).
# The /simulate/fund-wallet endpoint sends real TestNet ALGO.
# ⚠️  MUST be false in production to prevent free wallet funding.
SIMULATION_MODE=true

# DEMO_MODE: When true, fan mnemonics from demo_accounts.json are used
# to auto opt-in + transfer NFTs without Pera Wallet signing.
# ⚠️  MUST be false in production to prevent unauthorized signing.
DEMO_MODE=true
DEMO_ACCOUNTS_FILE=scripts/demo_accounts.json

# ── CORS Origins (comma-separated) ──────────────────────
# ⚠️  Never use '*' in production. List specific origins only.
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5500,http://127.0.0.1:5500

# ── Transak On-Ramp (fiat → crypto) ─────────────────────
TRANSAK_API_KEY=your_transak_api_key
TRANSAK_SECRET=your_transak_secret
TRANSAK_ENVIRONMENT=STAGING
PLATFORM_FEE_PERCENT=2.0
